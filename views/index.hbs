{{> header}}
<div class='container mt-5'>
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Tarefa</th>     
        <th scope='col'>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <th scope='row'><a href="/tasks/{{this.id}}">{{this.id}}</a></th>
          <td>{{title}}</td>      
          <td>
            <a href="/tasks/{{this.id}}/edit" class="btn btn-primary">Editar</a>
            <form action="/tasks/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" value="submit" onclick="return confirm('Tem certeza que deseja excluir o registro?')"
                class="btn btn-danger">Excluir</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{> footer}}